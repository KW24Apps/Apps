<?php
// config_secure.php.example - Exemplo de configuração segura
// Copie este arquivo para config_secure.php e configure seus webhooks

$ambiente = getenv('APP_ENV') ?: 'local';

$webhook_config = [];

if ($ambiente === 'local') {
    // Configurações locais - webhook de desenvolvimento/teste
    $webhook_config = [
        'bitrix_webhook' => 'https://seubitrix.bitrix24.com.br/rest/USER/WEBHOOK_LOCAL/',
        'ambiente' => 'local'
    ];
} else {
    // Configurações de produção - webhook real
    $webhook_config = [
        'bitrix_webhook' => 'https://seubitrix.bitrix24.com.br/rest/USER/WEBHOOK_PRODUCAO/',
        'ambiente' => 'producao'
    ];
}

return $webhook_config;
